{
    "name": "polkadot-js-bundle",
    "version": "3.8.1",
    "description": "A standalone bundle of the Polkadot{JS} libraries.",
    "main": "index.js",
    "scripts": {
        "build": "browserify index.js -o polkadot.js -t [ babelify --presets [ @babel/preset-env @babel/preset-react ] --plugins [ @babel/plugin-proposal-class-properties ] ]",
